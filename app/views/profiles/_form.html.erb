<%= form_for @profile do |f| %>
  <div class="form-group row">
    <%= f.label :gender,class: 'col-sm-2 form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :gender,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :location,class: 'col-sm-2 form-label' %>
    <div class="col-sm-10">
      <%= f.text_field :location,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :avatar,class: 'col-sm-2 form-label' %>
    <div class="col-sm-10">
      <%= f.file_field :avatar,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :bio,class: 'col-sm-2 form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :bio,rows:3,class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-12">
    <%= f.submit "Save",class: 'btn btn-info pull-right' %>
  </div>
<% end %>