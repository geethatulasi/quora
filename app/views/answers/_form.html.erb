<%= form_for([@question,@question.answers.build]) do |f| %>
  <div class="form-group row">
    <%= f.label :answer,class: 'col-sm-2 form-label' %>
    <div class="col-sm-10">
      <%= f.text_area :body,class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-12">
    <%= f.submit "Save",class: 'btn btn-info pull-right' %>
  </div>
<% end %>