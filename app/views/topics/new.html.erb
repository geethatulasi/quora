<div class="col-md-8"> 
  <%= form_for @topic do |f| %>
    <div class="form-group row">
      <%= f.label :topic,class: 'col-sm-2 form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name,class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-10">
      <%= f.submit "create",class: 'btn btn-info pull-right' %>
    </div>
  <% end %>
</div>