<div class="col-md-8">
  <%= form_for @question do |f| %>
    <div class="form-group row">
      <%=f.label :title,class: 'form-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :title,class: 'form-control' %>
      </div>
    </div>
     <div class="form-group row">
      <%=f.label :description,class: 'form-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_area :description,class: 'form-control' %>
      </div>
    </div>
     <div class="form-group row">
      <%=f.label :topic,class: 'form-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.collection_select :topic_id,@topics,:id,:name,prompt:"select",class: 'form-control' %>
      </div>
    </div>
    <div class="col-sm-12">
      <%= f.submit "Create",class: 'btn btn-primary pull-right' %>
    </div>
  <% end %>
</div>